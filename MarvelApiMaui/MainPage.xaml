<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarvelApiMaui.MainPage">

    <StackLayout Padding="20">
        <Image Source="logo.png" HeightRequest="200" />

        <Entry x:Name="CharacterNameEntry" Placeholder="Nombre del personaje" />
        <Button Text="Buscar Personaje por Nombre" Clicked="OnSearchCharacterByNameClicked" />

        <Entry x:Name="CharacterIdEntry" Placeholder="ID del personaje" />
        <Button Text="Buscar Personaje por ID" Clicked="OnSearchCharacterByIdClicked" />

        <Entry x:Name="PlanetNameEntry" Placeholder="Nombre del planeta" />
        <Button Text="Buscar Planeta por Nombre" Clicked="OnSearchPlanetByNameClicked" />

        <Entry x:Name="PlanetIdEntry" Placeholder="ID del planeta" />
        <Button Text="Buscar Planeta por ID" Clicked="OnSearchPlanetByIdClicked" />

        <Label x:Name="ResultLabel" Text="Resultados aparecerán aquí" />
    </StackLayout>

</ContentPage>