<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarvelApiMaui.MainPage">

    <StackLayout Padding="10" Spacing="10">
        <!-- Marvel Logo -->
        <Image Source="logo.png" HorizontalOptions="Center" />

        <!-- Search Bar -->
        <Entry x:Name="HeroEntry" Placeholder="Buscar personaje de Marvel" />

        <!-- Search Button -->
        <Button Text="Buscar" Clicked="OnCounterClicked" />

        <!-- Character Data Display -->
        <Label x:Name="CharacterDataLabel" Text="Información del personaje aparecerá aquí" />
    </StackLayout>
</ContentPage>